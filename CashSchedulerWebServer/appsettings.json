{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "App": {
    "Db": {
      "Refresh": false,
      "Host": ".\\SQLEXPRESS",
      "Port": "1433",
      "Name": "cash_scheduler",
      "MockDataRelativeFolderPath": "../../../Db/MockData/"
    },
    "Server": {
      "GraphQLAPIPath": "/graphql",
      "GraphQLPlaygroundPath": "/ui/graphql"
    },
    "Client": {
      "Protocol": "http",
      "Host": "localhost",
      "Port": "3000"
    },
    "Auth": {
      "UserPolicy": "UserPolicy",
      "SkipAuth": false,
      "DevUserId": "1",
      "TokenType": "Bearer",
      "AccessTokenLifetime": 60,
      "RefreshTokenLifetime": 10080,
      "EmailVerificationTokenLifetime": 5,
      "EmailVerificationCodeLength": 8
    },
    "Email": {
      "SMTP": {
        "Host": "smtp.gmail.com",
        "Port": 587
      }
    },
    "Jobs": {
      "Transactions": {
        "Name": "Transactions Job",
        "Cron": "0 0 2 ? * * *"
      },
      "RecurringTransactions": {
        "Name": "Recurring Transactions Job",
        "Cron": "0 20 2 ? * * *"
      },
      "Reporting": {
        "Name": "Reporting Job",
        "Cron": "0 0 10 ? * SUN *"
      }
    }
  }
}
