{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Data": {
    "RefreshDataOnLaunch": false
  },
  "App": {
    "Db": {
      "ConnectionStringFromSecrets": true
    },
    "Auth": {
      "UserPolicy": "UserPolicy",
      "SkipAuth": false
    },
    "Jobs": {
      "Transactions": {
        "Name": "Transactions Job",
        "Cron": "0 0 2 ? * * *"
      },
      "RecurringTransactions": {
        "Name": "Recurring Transactions Job",
        "Cron": "0 20 2 ? * * *"
      },
      "Reporting": {
        "Name": "Reporting Job",
        "Cron": "0 0 10 ? * SUN *"
      }
    }
  },
  "IsDevelopment": true
}
