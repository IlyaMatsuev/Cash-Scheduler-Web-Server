{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "App": {
    "DeleteAccountTimeout": 60,
    "Content": {
      "RootPath": "Content/Static",
      "RequestPath": "/static"
    },
    "Db": {
      "Refresh": false,
      "WithMockData": false,
      "Host": "localhost",
      "Port": "1433",
      "Name": "cash_scheduler",
      "MockDataPath": "/Db/Data/Mock/",
      "StandardDataPath": "/Db/Data/Standard/"
    },
    "Server": {
      "GraphQLAPIPath": "/graphql",
      "GraphQLPlaygroundPath": "/ui/graphql"
    },
    "Client": {
      "Protocol": "http",
      "Host": "localhost",
      "Port": "3000"
    },
    "Auth": {
      "SkipAuth": false,
      "DevUserId": "1",
      "TokenName": "Token",
      "TokenType": "Bearer",
      "AccessTokenLifetime": 60,
      "RefreshTokenLifetime": 10080,
      "EmailVerificationTokenLifetime": 1,
      "EmailVerificationCodeLength": 8
    },
    "Email": {
      "SMTP": {
        "Host": "smtp.gmail.com",
        "Port": 587
      }
    },
    "Jobs": {
      "Transactions": {
        "Name": "Transactions Job",
        "Cron": "0 0 2 ? * * *"
      },
      "RecurringTransactions": {
        "Name": "Recurring Transactions Job",
        "Cron": "0 20 2 ? * * *"
      },
      "Reporting": {
        "Name": "Reporting Job",
        "Cron": "0 0 10 ? * SUN *"
      },
      "ExchangeRates": {
        "Name": "Exchange Rates Job",
        "Cron": "0 0 6 ? * * *"
      }
    }
  },
  "WebServices": {
    "CurrencyExchangeRates": {
      "Endpoint": "https://api.exchangerate.host"
    },
    "SalesforceApi": {
      "Endpoint": "https://cashscheduler-dev-ed.my.salesforce.com",
      "Version": "v51.0"
    }
  }
}
